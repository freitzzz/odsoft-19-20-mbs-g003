<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="CMS">
		<class>pt.isep.cms.teachers.shared.Teacher</class>
		<class>pt.isep.cms.students.shared.Student</class>
		<class>pt.isep.cms.classes.shared.CMSClass</class>
		<class>pt.isep.cms.subjectclasses.shared.SubjectClass</class>
		<class>pt.isep.cms.subjects.shared.Subject</class>
		<properties>
	      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
	      <property name="javax.persistence.jdbc.url"    value="jdbc:mysql://localhost:3306/cms" />
	      <property name="javax.persistence.jdbc.user" value="cms" />
	      <property name="javax.persistence.jdbc.password" value="cms123" />
	      <property name="eclipselink.ddl-generation" value="create-tables" />
	      <property name="eclipselink.ddl-generation.output-mode" value="database" />
	    </properties>
	</persistence-unit>
</persistence>
